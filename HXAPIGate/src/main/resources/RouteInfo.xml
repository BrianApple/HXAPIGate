    <Route>
      <matchUrl>/role/**</matchUrl>
      <stratege>weight</stratege>
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>false</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>6</weight>
        </RouteNode>
      </routeNodes> 
    </Route>
    <Route>
      <matchUrl>/user/accountupdate</matchUrl>
      <stratege>weight</stratege>
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>6</weight>
        </RouteNode>
      </routeNodes> 
    </Route>
    <Route>
      <matchUrl>/user</matchUrl>
      <stratege>weight</stratege>
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>6</weight>
        </RouteNode>
      </routeNodes> 
    </Route>
    
    <!-- dubbo接口    /接口名/方法名 -->
    <Route>
      <matchUrl>/commonService/*</matchUrl>
      <stratege>weight</stratege>
      <protocal>dubbo</protocal><!-- http/dubbo -->
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
           <interfaceName>commonService</interfaceName>
        </RouteNode>
      </routeNodes> 
    </Route>
    
  </routes>
</RouteAll>