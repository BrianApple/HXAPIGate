<?xml version="1.0" encoding="UTF-8"?>
<RouteAll>
  <routes>
  	<!-- 一个Route节点中包含同一个matchUrl的所有微服务信息 -->
    <Route>
      <matchUrl>/account/login</matchUrl>
      <stratege>circle</stratege>
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>8080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
        <!-- <RouteNode>
          <ip>127.0.0.1</ip>
          <port>80</port>
          <order>1</order>
          <weight>1</weight>
        </RouteNode> -->
      </routeNodes>
      
    </Route>
    <Route>
      <matchUrl>/account/register</matchUrl>
      <stratege>circle</stratege>
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>8080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
        <!-- <RouteNode>
          <ip>127.0.0.1</ip>
          <port>80</port>
          <order>1</order>
          <weight>1</weight>
        </RouteNode> -->
      </routeNodes> 
      
    </Route>
    <Route>
      <matchUrl>/user/role/*</matchUrl>
      <stratege>circle</stratege>
      <needAuth>true</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>8080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
        <!-- <RouteNode>
          <ip>127.0.0.1</ip>
          <port>80</port>
          <order>1</order>
          <weight>1</weight>
        </RouteNode> -->
      </routeNodes> 
    </Route>
  </routes>
</RouteAll>