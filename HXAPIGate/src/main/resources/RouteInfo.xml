<?xml version="1.0" encoding="UTF-8"?>
<RouteAll>
  <routes>
  	<!-- 一个Route节点中包含同一个matchUrl的所有微服务信息 -->
    <Route>
      <matchUrl>/account/*</matchUrl>
      <stratege>circle</stratege><!-- circle/weight -->
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>false</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
      </routeNodes>
    </Route>
    <!-- 获取授权资源接口 -->
    <Route>
      <matchUrl>/resource/**</matchUrl>
      <stratege>circle</stratege><!-- circle/weight -->
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>false</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
      </routeNodes>
    </Route>
    <!-- 授权平台日志相关接口 -->
    <Route>
      <matchUrl>/log/**</matchUrl>
      <stratege>circle</stratege><!-- circle/weight -->
      <protocal>http</protocal><!-- http/dubbo -->
      <needAuth>false</needAuth>
      <routeNodes>
        <RouteNode>
          <ip>127.0.0.1</ip>
          <port>18080</port>
          <order>0</order>
          <weight>1</weight>
        </RouteNode>
      </routeNodes>
    </Route>
